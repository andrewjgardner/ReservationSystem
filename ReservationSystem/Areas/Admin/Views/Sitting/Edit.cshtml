@model ReservationSystem.Areas.Admin.Models.Sitting.Edit

@{
	ViewData["Title"] = "Edit Sitting";
	var startTime = Model.StartTime.ToString("yyyy-MM-ddThh:mm");
	var endTime = Model.EndTime.ToString("yyyy-MM-ddThh:mm");
}
<h1 class="display-4 text-center text-primary pb-4 fw-4">Edit Sitting</h1>

<div class="col-md-6 offset-md-3">
	<form asp-action=Edit>
		<div class="form-group mb-3">
			<label for="title" class="form-label">Name</label>
			<input type="text" class="form-control" id="title" name="title" value=@Model.Title required>
		</div>
		<div class="form-group mb-3">
			<label for="starttime" class="form-label">Start Time</label>
			<input type="datetime-local" class="form-control" id="starttime" name="starttime" value=@startTime>
		</div>
		<div class="form-group mb-3">
			<label for="endtime" class="form-label">End Time</label>
			<input type="datetime-local" class="form-control" id="endtime" name="endtime" value=@endTime>
		</div>
		<div class="form-group mb-3">
			<label for="SittingTypeId" class="form-label">Sitting Type</label>
			<select asp-for=SittingTypeId asp-items=Model.SittingTypes class="form-select"></select>
		</div>
		<div class="form-group mb-3">
			<label for="capacity" class="form-label">Capacity</label>
			<input type="text" class="form-control" id="capacity" name="capacity" value=@Model.Capacity>
		</div>
		@if (Model.IsClosed == true)
		{
			<div class="form-group mb-3">
				<input type="checkbox" id="isClosed" name="isClosed" value="true" class="form-check-input" checked>
				<label for="isClosed" class="form-check-label">Closed Sitting</label>
			</div>
		}
		else
		{
			<div class="form-group mb-3">
				<input type="checkbox" id="isClosed" name="isClosed" value="true" class="form-check-input">
				<label for="isClosed" class="form-check-label">Closed Sitting</label>
			</div>
		}
		<div class="d-grid gap-2">
			<button type="submit" class="btn btn-success">Submit</button>
		</div>
		<input type="hidden" asp-for=RestaurantId />
		<input type="hidden" asp-for=SittingId />
	</form>
</div>
