@model ReservationSystem.Areas.Admin.Models.Sitting.Create

@{
	ViewData["Title"] = "Add Sitting";
	var starttime = Model.StartTime.ToString();
	var endtime = Model.EndTime.ToString();
}
<h1 class="display-4 text-primary pb-4 fw-4">Add Sitting</h1>

<div class="col-md-6 offset-md-3">
	<form asp-action=Create>
		<div class="sitting-details">
			<div class="form-group">
				<label for="title">Name</label>
				<input asp-for=Title class="form-control" placeholder="Enter name" required>
			</div>
			<div class="form-group">
				<label for="StartTime">Start Time</label>
				<input asp-for=StartTime class="form-control" placeholder="HH:mm"/>
			</div>
			<div class="form-group">
				<label for="EndTime">End Time</label>
				<input asp-for=EndTime class="form-control" />
			</div>
			<div class="form-group">
				<p>Sitting Type: </p>
				<select asp-for=SittingTypeId asp-items=Model.SittingTypes></select>
			</div>
			<div class="form-group">
				<label for="capacity">Capacity</label>
				<input asp-for=Capacity class="form-control">
			</div>
			<div class="form-group">
				<label for="isClosed">Closed Sitting: </label>
				<input asp-for=IsClosed />
				@*<input type="checkbox" id="isClosed" name="isClosed" value="true">*@
			</div>
		</div>
		<div class="recurring-form">
			<div class="form-group">
				<label for="cb-show-recurring">Make Recurring? </label>
				<input asp-for=IsRecurring type="checkbox" id="cb-show-recurring" />
			</div>
			<div class="form-group my-4" style="display:none" id="recurring-form-container">
				<div class="form-group" id="recurringType">
					<label for="recurringType">Recurring Type: </label>
					<select asp-for=RecurringType asp-items=Model.RecurringTypes></select>
				</div>

				<label for="numberToSchedule" class="form-label">Number to schedule:</label>
				<input type="range" class="form-range" id="numberToSchedule" name="numberToSchedule" min="1" max="60"/>
				<div class = "card">
					<div class="card-body">
						<div id="numberToScheduleText"></div>
					</div>
				</div>
			</div>
		</div>
		<div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<input type="hidden" asp-for=RestaurantId />
	</form>
</div>

@section Scripts{
	<script src="~/js/admin.sitting.create.js"></script>
	<script src="~/js/sittingRangeInput.js"></script>
}
