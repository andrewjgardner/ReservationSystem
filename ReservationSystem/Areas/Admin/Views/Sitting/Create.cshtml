<script>
	function showRecurringForm() {
		document.getElementById("recurringForm").toggleAttribute("hidden");
		//$("#recurringForm").show();
	}

	var slider = document.getElementById("numberToSchedule");
	var output = document.getElementById("numberToScheduleText");
	output.innerHTML = slider.value;

	slider.oninput = function() {
		output.innerHTML = this.value;
	}
</script>
}
