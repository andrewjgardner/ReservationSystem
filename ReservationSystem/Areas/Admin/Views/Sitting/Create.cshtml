@model ReservationSystem.Areas.Admin.Models.Sitting.Create

@{
	ViewData["Title"] = "Add Sitting";
	var x = Model.SittingTypes;
}
<h1 class="display-4 text-primary pb-4 fw-4">Add Sitting</h1>

<div class="col-md-6 offset-md-3">
	<form asp-action=Create>
		<div class="form-group">
			<label for="title">Name</label>
			<input type="text" class="form-control" id="title" name="title" placeholder="Enter name" required>
		</div>
		<div class="form-group">
			<label for="date">Date</label>
			<input type="date" class="form-control" id="date" name="date" required>
		</div>
		<div class="form-group">
			<label for="starttime">Start Time</label>
			<input type="time" class="form-control" id="starttime" name="starttime">
		</div>
		<div class="form-group">
			<label for="endtime">End Time</label>
			<input type="time" class="form-control" id="endtime" name="endtime">
		</div>
		<div class="form-group">
			<p>Sitting Type: </p>
			<select asp-for=SittingTypeId asp-items=Model.SittingTypes></select>
		</div>
		<div class="form-group">
			<label for="capacity">Capacity</label>
			<input type="text" class="form-control" id="capacity" name="capacity" value=@Model.Capacity>
		</div>
		<div class="form-group">
			<label for="isClosed">Closed Sitting: </label>
			<input type="checkbox" id="isClosed" name="isClosed">
		</div>
		<div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<input type="hidden" asp-for=RestaurantId />
	</form>
</div>
