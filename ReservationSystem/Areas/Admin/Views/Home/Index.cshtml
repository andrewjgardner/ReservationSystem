@{
}

<div class="container d-flex justify-content-center py-3">
    <div class="row">
        <div class="col">
            @if (User.IsInRole("Manager"))
            {
                <div class="card" style="width: 18rem; height: 18rem;">
                    <div class="card-header">
                        Manager:
                    </div>
                    <div>
                        <a type="button" class="btn btn-primary x" asp-controller="Sitting" asp-action="Create">Add Sitting</a>
                        <a type="button" class="btn btn-primary x" asp-controller="Reservation" asp-action="Create">Add Reservation</a>
                        <a type="button" class="btn btn-primary x" asp-controller="Report" asp-action="Index">Reports</a>
                        <a type="button" class="btn btn-primary x" asp-controller="User" asp-action="Index">User Management</a>
                    </div>

                </div>
            }
        </div>
        <div class="col">
            <div class="card" style="width: 18rem; height: 18rem;">
                <div class="card-header">
                    Staff:
                </div>
                <div>
                    <a type="button" class="btn btn-primary x" asp-controller="Sitting" asp-action="Index">View Sittings</a>
                    <a type="button" class="btn btn-primary x" asp-controller="Reservation" asp-action="Index">View Reservations</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/cardButtons.css" />
}


