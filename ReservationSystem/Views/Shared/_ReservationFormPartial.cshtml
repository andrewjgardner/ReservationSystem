@model ReservationSystem.Models.Reservation.ReservationForm

<div class="d-flex flex-column justify-content-between">
	@if (User.Identity.IsAuthenticated && User.IsInRole("Member"))
	{
		<div class="form-group mb-3">
			<label asp-for="FirstName">First Name</label>
			<input asp-for="FirstName" class="form-control" value="@Model.FirstName" readonly>
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label asp-for="LastName">Last Name</label>
			<input asp-for="LastName" class="form-control" value="@Model.LastName" readonly>
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label asp-for="Email">Email</label>
			<input asp-for="Email" class="form-control" value="@Model.Email" readonly>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		@if (@Model.Phone == null)
		{
			<div class="form-group mb-3">
				<label asp-for="Phone">Phone Number</label>
				<input asp-for="Phone" class="form-control" placeholder="Enter Phone Number">
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
		}
		else
		{
			<div class="form-group mb-3">
				<label asp-for="Phone">Phone Number</label>
				<input asp-for="Phone" class="form-control" value="@Model.Phone" readonly>
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
		}


	}
	else
	{
		<div class="form-group mb-3">
			<label asp-for="FirstName">First Name</label>
			<input asp-for="FirstName" class="form-control" placeholder="Enter first name">
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label asp-for="LastName">Last Name</label>
			<input asp-for="LastName" class="form-control" placeholder="Enter last name">
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label asp-for="Email">Email</label>
			<input asp-for="Email" class="form-control" placeholder="Enter email">
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label asp-for="Phone">Phone Number</label>
			<input asp-for="Phone" class="form-control" placeholder="Enter Phone Number">
			<span asp-validation-for="Phone" class="text-danger"></span>
		</div>
	}
	<input type="hidden" asp-for="DateTime" />
	<div class="form-group mb-3">
		<label asp-for="Guests">Number Of Guests</label>
		<input asp-for="Guests" class="form-control">
		<span asp-validation-for="Guests" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="Comments">Comments</label>
		<input asp-for="Comments" class="form-control">
		<span asp-validation-for="Comments" class="text-danger"></span>
	</div>
</div>
